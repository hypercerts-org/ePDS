{
  "name": "epds",
  "version": "0.1.0",
  "private": true,
  "description": "Passwordless ATProto PDS with magic link authentication",
  "license": "MIT",
  "engines": {
    "node": ">=18.7.0"
  },
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "build": "pnpm --recursive build",
    "dev": "pnpm --recursive --parallel dev",
    "dev:pds": "pnpm --filter @certified-app/pds-core dev",
    "dev:auth": "pnpm --filter @certified-app/auth-service dev",
    "start": "pnpm --recursive --parallel start",
    "typecheck": "tsc --build tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "dependencies": {
    "pino": "^10.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/pino": "^7.0.5",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "type": "module"
}
